<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="V1__CREATE_USER_TABLE" author="">
        <createTable tableName="representatives">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="authorities">
            <column name="username" type="varchar(50)">
                <constraints nullable="false" foreignKeyName="fk_authority_username_user" references="representatives(username)" deleteCascade="true"/>
            </column>
            <column name="authority" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="businesses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="business_authorities">
            <column name="username" type="varchar(50)">
                <constraints nullable="false" foreignKeyName="fk_authority_username_business" references="businesses(username)" deleteCascade="true"/>
            </column>
            <column name="authority" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="V2__ADD_USER" author="">
        <insert tableName="Representatives">
            <column name="username" value="user"/>
            <column name="password" value="$2a$10$rDhr28yT2X26mqQVytCJUOti9k6Ry16i3HSWM.vLZ8zMQQl1SqyO2"/>
            <column name="enabled" value="true"/>
        </insert>
        <insert tableName="Authorities">
            <column name="username" value="user"/>
            <column name="authority" value="USER"/>
        </insert>
    </changeSet>

    <changeSet id="V3__ADD_BUSINESS" author="">
        <insert tableName="businesses">
            <column name="username" value="admin"/>
            <column name="password" value="$2a$10$rDhr28yT2X26mqQVytCJUOti9k6Ry16i3HSWM.vLZ8zMQQl1SqyO2"/>
            <column name="enabled" value="true"/>
        </insert>
        <insert tableName="business_authorities">
            <column name="username" value="admin"/>
            <column name="authority" value="BUSINESS"/>
        </insert>
    </changeSet>
</databaseChangeLog>